{
  "manifest_version": 3,
  "name": "JabRef Browser Extension",
  "version": "1.0.2",
  "description": "Connect to JabRef via 6.0 HTTP Interface and send bibliography entries",
  "permissions": ["tabs", "offscreen", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "JabRef-icon-16.png",
      "48": "JabRef-icon-48.png",
      "128": "JabRef-icon-128.png"
    }
  },
  "icons": {
    "16": "JabRef-icon-16.png",
    "48": "JabRef-icon-48.png",
    "128": "JabRef-icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "browser-extension@jabref",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
