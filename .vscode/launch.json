{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch WebExtension",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "reloadOnChange": {
                "watch": "${workspaceFolder}/**/*.js",
                "ignore": ["**/node_modules/**"]
            },
            "addonPath": "${workspaceFolder}",
            "firefoxArgs": ["https://arxiv.org/a/diez_t_1.html", "about:debugging#/runtime/this-firefox"]
        }
    ]
}
